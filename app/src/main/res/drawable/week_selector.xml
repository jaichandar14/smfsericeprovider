<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/size_10dp"
                android:topLeftRadius="@dimen/size_10dp" />
            <stroke
                android:width="@dimen/size_2dp"
                android:color="@color/circle_gray" />
        </shape>
    </item><!-- Body -->
    <item
        android:bottom="@dimen/size_2dp"
        android:left="@dimen/size_2dp"
        android:top="@dimen/size_2dp">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/size_20dp"
                android:topLeftRadius="@dimen/size_20dp" />
            <solid android:color="@color/white"></solid>
        </shape>
    </item>

</layer-list>


