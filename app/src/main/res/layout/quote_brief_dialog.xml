<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quoteBriefDialogViewModel"
            type="com.smf.events.ui.quotebriefdialog.QuoteBriefDialogViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quote_brief_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.quotebriefdialog.QuoteBriefDialog">

            <RelativeLayout
                android:id="@+id/linear_catering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="@dimen/size_10dp"
                android:paddingStart="@dimen/size_15dp"
                android:paddingBottom="@dimen/size_10dp"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="@dimen/size_5dp"
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/size_8dp"
                    app:srcCompat="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/tx_catering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_32dp"
                    android:fontFamily="@font/mulish_semi_bold"
                    android:text="@string/catering_fork_spoon"
                    android:textColor="@color/theme_header_blue"
                    android:textSize="@dimen/size_24sp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                app:cardCornerRadius="@dimen/size_12dp"
                app:cardElevation="@dimen/size_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_catering">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_20dp">

                        <TextView
                            android:id="@+id/tx_job_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/mulish_bold"
                            android:text="@string/saras_birthday"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tx_job_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_24dp"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/mulish_semi_bold"
                            android:text="@string/_2500"
                            android:textColor="@color/black_event_title"
                            android:textSize="@dimen/size_22sp"
                            app:layout_constraintBottom_toBottomOf="@+id/tx_job_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/tx_job_title"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tx_job_idnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/ca457845264162"
                            android:textColor="@color/blue_event_id"
                            android:textSize="@dimen/size_18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tx_job_title" />

                        <TextView
                            android:id="@+id/view_quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:fontFamily="@font/mulish_regular"
                            android:text="@string/view_quote"
                            android:textColor="@color/blue_event_id"
                            android:textSize="@dimen/size_15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/tx_job_idnum"
                            app:layout_constraintTop_toBottomOf="@+id/tx_job_amount" />

                        <TextView
                            android:id="@id/service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:fontFamily="@font/mulish_semi_bold"
                            android:text="@string/fork_amp_spoon"
                            android:textSize="@dimen/size_16sp"
                            app:layout_constraintEnd_toEndOf="@+id/tx_job_idnum"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tx_job_idnum" />

                        <TextView
                            android:id="@+id/branch_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_2dp"
                            android:fontFamily="@font/mulish_bold"
                            android:text="@string/fork_amp_spoon"
                            android:textColor="@color/dark_font"
                            android:textSize="@dimen/size_16sp"
                            app:layout_constraintEnd_toEndOf="@+id/service_name"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/service_name" />

                        <LinearLayout
                            android:id="@+id/linear_spn_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_20dp"
                            android:weightSum="3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/branch_name">

                            <TextView
                                android:id="@+id/exp_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".2"
                                android:textSize="@dimen/size_15sp"
                                android:text="Status:"
                                android:gravity="start"
                                android:layout_marginTop="@dimen/size_5dp"
                                android:fontFamily="@font/mulish_semi_bold" />

                            <TextView
                                android:id="@+id/spn_Bid_accepted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_5dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/mulish_regular"
                                android:gravity="start"
                                android:text="@string/bid_accepted"
                                android:textColor="@color/pairing_theme"
                                android:textSize="@dimen/size_15sp"
                                app:layout_constraintTop_toBottomOf="@+id/tx_job_idnum" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/expandable_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:paddingBottom="@dimen/size_10dp"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:background="@color/quote_details_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linear_spn_layout">

                            <ImageView
                                android:id="@+id/check1"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_10dp"
                                app:srcCompat="@drawable/check_circle"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/check1inprogress"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_10dp"
                                app:srcCompat="@drawable/bidstatus_circle"
                                android:visibility="invisible"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tx_bid_accpeted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_12dp"
                                android:fontFamily="@font/mulish_bold"
                                android:padding="@dimen/size_2dp"
                                android:text="@string/bid_accepted"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_15sp"
                                app:layout_constraintStart_toEndOf="@+id/check1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tx_bid_accpeted_quote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/quote_send_to_the_customer_quote_value_2500"
                                android:textSize="@dimen/size_12dp"
                                app:layout_constraintStart_toEndOf="@+id/check1"
                                app:layout_constraintTop_toBottomOf="@+id/tx_bid_accpeted" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dp_0"
                                android:background="@color/darkblue_smf_font"
                                app:layout_constraintBottom_toTopOf="@+id/check2"
                                app:layout_constraintEnd_toEndOf="@id/check2"
                                app:layout_constraintStart_toStartOf="@+id/check1"
                                app:layout_constraintTop_toBottomOf="@+id/check1" />

                            <ImageView
                                android:id="@+id/check2"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/bidstatus_circle"
                                android:visibility="visible"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check1" />

                            <ImageView
                                android:id="@+id/check2_complete"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/bid_status_dis_circle"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check1" />

                            <TextView
                                android:id="@+id/tx_won_reject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:fontFamily="@font/mulish_bold"
                                android:padding="@dimen/size_2dp"
                                android:text="@string/won_reject_lostbid"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_14sp"
                                app:layout_constraintStart_toEndOf="@id/check2"
                                app:layout_constraintTop_toBottomOf="@+id/tx_bid_accpeted_quote" />

                            <TextView
                                android:id="@+id/tx_won_reject_quote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/size_12sp"
                                app:layout_constraintStart_toEndOf="@+id/check1"
                                app:layout_constraintTop_toBottomOf="@+id/tx_won_reject" />

                            <View
                                android:id="@+id/processflow2"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dp_0"
                                android:background="#CDCBCB"
                                app:layout_constraintBottom_toTopOf="@+id/check3"
                                app:layout_constraintEnd_toEndOf="@id/check3"
                                app:layout_constraintStart_toStartOf="@+id/check2"
                                app:layout_constraintTop_toBottomOf="@+id/check2" />

                            <ImageView
                                android:id="@+id/check3"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/service_status_grey"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check2" />

                            <ImageView
                                android:id="@+id/check3_completed"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/service_status"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check2" />

                            <ImageView
                                android:id="@+id/check3_inprogress"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/inprogress_check"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check2" />

                            <TextView
                                android:id="@+id/tx_service_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_24dp"
                                android:fontFamily="@font/mulish_bold"
                                android:padding="@dimen/size_2dp"
                                android:text="@string/service_status"
                                android:textSize="@dimen/size_14sp"
                                app:layout_constraintStart_toEndOf="@id/check2"
                                app:layout_constraintTop_toBottomOf="@+id/tx_won_reject_quote" />

                            <TextView
                                android:id="@+id/tx_service_status_quotes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_2dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/size_10sp"
                                app:layout_constraintStart_toEndOf="@+id/check1"
                                app:layout_constraintTop_toBottomOf="@+id/tx_service_status" />

                            <View
                                android:id="@+id/processflow3"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dp_0"
                                android:background="#CDCBCB"
                                app:layout_constraintBottom_toTopOf="@+id/check4"
                                app:layout_constraintEnd_toEndOf="@id/check4"
                                app:layout_constraintStart_toStartOf="@+id/check3"
                                app:layout_constraintTop_toBottomOf="@+id/check3" />

                            <ImageView
                                android:id="@+id/check4"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                android:layout_marginStart="@dimen/size_12dp"
                                app:srcCompat="@drawable/review_dis_circle"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check3" />

                            <ImageView
                                android:id="@+id/check4_completed"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/completedprocess"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check3" />

                            <ImageView
                                android:id="@+id/check4_inprogress"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:layout_marginTop="@dimen/size_30dp"
                                app:srcCompat="@drawable/inprogress_check"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/check3" />

                            <TextView
                                android:id="@+id/tx_review_feedback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_22dp"
                                android:fontFamily="@font/mulish_bold"
                                android:padding="@dimen/size_2dp"
                                android:text="@string/review_feedback"
                                android:textSize="@dimen/size_14sp"
                                app:layout_constraintStart_toEndOf="@id/check2"
                                android:layout_marginBottom="@dimen/size_10dp"
                                app:layout_constraintTop_toBottomOf="@+id/tx_service_status_quotes" />

                            <TextView
                                android:id="@+id/tx_review_feedback_quotes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_2dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="10sp"
                                app:layout_constraintStart_toEndOf="@+id/check1"
                                app:layout_constraintTop_toBottomOf="@+id/tx_service_status" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:text="EVENT DETAILS"
                            android:textColor="@color/darkblue_smf_font"
                            android:textSize="@dimen/size_18sp"
                            android:fontFamily="@font/mulish_bold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/tx_eventdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/event_date"
                                android:textSize="@dimen/size_16sp" />

                            <TextView
                                android:id="@+id/tx_eventdate_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_9_aug_2022"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/tx_bid_proposal_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/bid_proposal_date"
                                android:textSize="@dimen/size_16sp" />

                            <TextView
                                android:id="@+id/tx_bid_proposal_date_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_9_aug_2021"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/tx_cut_off_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/cut_off_date"
                                android:textSize="@dimen/size_16sp" />

                            <TextView
                                android:id="@+id/tx_cut_off_date_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_9_aug_2022"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/service_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/service_date_"
                                android:textSize="@dimen/size_16sp" />

                            <TextView
                                android:id="@+id/service_date_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_9_aug_2022"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/payment_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/payment_status"
                                android:textSize="@dimen/size_16sp" />

                            <TextView
                                android:id="@+id/payment_status_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_9_aug_2022"
                                android:textColor="@color/dark_font"
                                android:textSize="@dimen/size_16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
