<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_card_view_layout"
    android:layout_width="@dimen/size_90dp"
    android:layout_height="@dimen/size_80dp"
    android:layout_marginTop="@dimen/size_10dp"
    android:layout_marginStart="@dimen/size_2dp"
    android:layout_marginEnd="@dimen/size_18dp"
    android:background="@drawable/corner_radius_background_modify_slots"
    android:backgroundTint="@color/title_background_blue"
    android:paddingTop="@dimen/size_8dp">

    <TextView
        android:id="@+id/number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_bold"
        android:gravity="center"
        android:text="@string/_4"
        android:textColor="@color/light_blue_service_count"
        android:textSize="@dimen/size_30sp"
        app:layout_constraintBottom_toTopOf="@+id/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/mulish_regular"
        android:gravity="center"
        android:text="@string/active"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintTop_toBottomOf="@+id/number_text" />
</androidx.constraintlayout.widget.ConstraintLayout>



