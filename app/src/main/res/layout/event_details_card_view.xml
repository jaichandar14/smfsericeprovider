        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/new_req_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_12dp"
            android:paddingBottom="@dimen/size_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_date">

            <LinearLayout
                android:id="@id/right_arrow_imageView"
                android:layout_width="@dimen/size_150dp"
                android:layout_height="@dimen/size_35dp"
                android:layout_marginTop="@dimen/size_2dp"
                android:background="@drawable/custom_button_round_corner"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/size_15dp"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/right_arrow_imageView"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_weight="1.6"
                    android:fontFamily="@font/mulish_regular"
                    android:text="@string/order_details"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@drawable/button_arrow">

                </ImageView>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/unlike_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8dp"
                android:src="@drawable/reject_bid_circle"
                app:layout_constraintBottom_toBottomOf="@+id/right_arrow_imageView"
                app:layout_constraintEnd_toStartOf="@+id/like_imageView"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintStart_toEndOf="@+id/right_arrow_imageView"
                app:layout_constraintTop_toTopOf="@+id/right_arrow_imageView" />

            <ImageView
