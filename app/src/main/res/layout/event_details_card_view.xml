            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:fontFamily="@font/mulish_regular"
            android:text="@string/service_date"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/event_date_tx"
            app:layout_constraintTop_toBottomOf="@+id/event_type_text" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="@string/aug_26"
            android:textColor="@color/elephant_black"
            android:textSize="@dimen/size_18sp"
            app:layout_constraintEnd_toEndOf="@+id/event_date_tx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_date_tx" />

        <TextView
            android:id="@+id/service_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="@string/_12_aug"
            android:textColor="@color/elephant_black"
            android:textSize="@dimen/size_18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/change_of_mind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_12dp"
            android:fontFamily="@font/mulish_medium"
            android:text="@string/change_in_mind"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_14sp"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/size_25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/service_date"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

