                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                app:layout_constraintBottom_toBottomOf="@+id/right_arrow_imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintStart_toEndOf="@+id/right_arrow_imageView"
                app:layout_constraintTop_toTopOf="@+id/right_arrow_imageView"
                app:srcCompat="@drawable/accept_button"
                tools:targetApi="lollipop" />


